<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.atlascopco</groupId>
	<artifactId>literumilo</artifactId>
	<version>1.0.2-SNAPSHOT</version>
	<name>Literumilo</name>
	<description>This library adds underlining and context menus for JTextComponents.</description>
	<url>http://thomas-joiner.github.com/literumilo</url>
	<issueManagement>
		<system>Github Issues</system>
		<url>https://github.com/thomas-joiner/literumilo/issues</url>
	</issueManagement>
	<inceptionYear>2012</inceptionYear>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.6</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
        <dependency>
        	<groupId>ch.qos.logback</groupId>
        	<artifactId>logback-classic</artifactId>
        	<version>0.9.30</version>
        	<scope>test</scope>
        </dependency>
        <dependency>
        	<groupId>com.atlascopco</groupId>
        	<artifactId>hunspell-bridj</artifactId>
        	<version>1.0.4</version>
        </dependency>
	</dependencies>
	<organization>
		<name>Atlas Copco Drilling Solutions</name>
		<url>http://www.atlascopco.com/</url>
	</organization>
	<scm>
		<url>https://github.com/thomas-joiner/literumilo</url>
        <connection>scm:git:https://github.com/thomas-joiner/literumilo.git</connection>
        <developerConnection>scm:git:git@github.com:thomas-joiner/literumilo.git</developerConnection>
	  <tag>HEAD</tag>
  </scm>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>
